# ── Database ──────────────────────────────────────────────────────────
POSTGRES_USER=vault
POSTGRES_PASSWORD=changeme
POSTGRES_DB=vault

# For Docker (default): uses service name 'postgres'
DATABASE_URL=postgresql+asyncpg://vault:vault@postgres:5432/vault
DATABASE_URL_SYNC=postgresql://vault:vault@postgres:5432/vault

# For local dev (no Docker): use localhost
# DATABASE_URL=postgresql+asyncpg://vault:vault@localhost:5432/vault
# DATABASE_URL_SYNC=postgresql://vault:vault@localhost:5432/vault

# ── Redis ─────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
# Local: REDIS_URL=redis://localhost:6379/0

# ── Auth ──────────────────────────────────────────────────────────────
JWT_SECRET=change-me-in-production-use-a-long-random-string
# Production defaults to true. Set false only for local single-user dev.
AUTH_REQUIRED=false

# ── Claude AI ─────────────────────────────────────────────────────────
# Get your key at: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ── App ───────────────────────────────────────────────────────────────
APP_ENV=development
APP_DEBUG=true
CORS_ORIGINS=http://localhost:3000

# ── Frontend ──────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8080
